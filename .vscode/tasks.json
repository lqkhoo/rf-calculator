{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Browserify",
			"type": "shell",
			"command": "browserify ts/App.ts -p [ tsify --noImplicitAny ] > js/rf5planner.js",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Sass compile",
			"type": "shell",
			"command": "sass css/rf5planner.scss css/rf5planner.css",
			"group": "build"
		},
		{
			"label": "Build all",
			"dependsOn": ["Browserify", "Sass compile"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}