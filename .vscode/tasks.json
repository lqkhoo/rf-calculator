{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Browserify calculator",
			"type": "shell",
			"command": "browserify ts/RF5CalculatorApp.ts -p [ tsify --noImplicitAny ] > js/rf5-calculator.js",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Browserify itemtable",
			"type": "shell",
			"command": "browserify ts/RF5ItemTableApp.ts -p [ tsify --noImplicitAny ] > js/rf5-itemtable.js",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Sass compile common",
			"type": "shell",
			"command": "sass css/rf5-common.scss css/rf5-common.css",
			"group": "build"
		},
		{
			"label": "Sass compile itemtable",
			"type": "shell",
			"command": "sass css/rf5-itemtable.scss css/rf5-itemtable.css",
			"group": "build"
		},
		{
			"label": "Build all",
			"dependsOn": ["Browserify calculator", "Sass compile common", "Sass compile itemtable", "Browserify itemtable"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}